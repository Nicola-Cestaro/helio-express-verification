{
    "manifest_version": 2,
    "version": "0.1.1",
    "name": "Helio Express",
    "short_name": "Helio Express",
    "description": "Agregue productos de varios comercios electr√≥nicos a su carrito Helio Express y los compraremos por usted y se los enviaremos.",
    "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-olq9MFWdz4h8WUDmtmU3u4VKUPzV8Ks3LpssEcJP73k='; object-src 'self'",
    "permissions": [
        "*://*.helioexpress.com/*",
        "*://yzcl5rpmmg.execute-api.us-east-1.amazonaws.com/*",
        "storage",
        "tabs"
    ],
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png" 
    },
    "content_scripts": [
        {
            "matches": ["*://*.amazon.com/*"],
            "js": [
                "amazon.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "icons/minilogo.png",
        "icons/check-circle.gif"
    ],
    "externally_connectable": {
        "ids": ["*"],
        "matches": ["*://*.amazon.com/*","*://localhost/project/public/*","http://localhost/project/public/*","http://my.localhost/*"]
    },
    "background": {
        "service_worker": "background.js"
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Helio Express"
    }
}
